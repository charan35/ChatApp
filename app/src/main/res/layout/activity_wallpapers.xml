<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/wallpapers"
    tools:context=".Wallpapers">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:background="#3399ff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/back"
                android:layout_marginLeft="3dp"
                android:src="@drawable/ic_arrow_back_black_24dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/logo"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alta Chat"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/bellb"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear1"
        android:weightSum="4"
        android:layout_below="@+id/toolbar"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">



    <ImageView
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:id="@+id/black"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:src="@color/black"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:id="@+id/blue"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@color/white"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/dark"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/cardview_dark_background"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/primary"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/design_default_color_primary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear2"
        android:weightSum="4"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/linear1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/orange"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:src="@color/orange"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/lightyellow"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/lightyellow"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color1"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color1"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color2"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear3"
        android:weightSum="4"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/linear2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color3"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:src="@color/color3"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/color4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color4"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color5"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color5"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/color6"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@color/color6"/>
    </LinearLayout>

</RelativeLayout>